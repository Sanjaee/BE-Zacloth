# Database Configuration
POSTGRES_USER=zacloth_user
POSTGRES_PASSWORD=ZaclothDB2024!@#
POSTGRES_DB=zacloth_db
DATABASE_URL="postgresql://zacloth_user:ZaclothDB2024!@#@localhost:5432/zacloth_db"

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET="zacloth_jwt_secret_key_2024_super_secure_change_in_production"
JWT_REFRESH_SECRET="zacloth_refresh_secret_key_2024_super_secure_change_in_production"

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000
CLIENT_URL=http://localhost:3000

# Admin IP Whitelist (optional, leave empty to disable)
ADMIN_IP_WHITELIST=""

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# RajaOngkir API
RAJAONGKIR_API_KEY="your-rajaongkir-api-key-here"

# Redis Configuration (without password for development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Session Secret
SESSION_SECRET=zacloth_session_secret_2024_super_secure

# Google OAuth (if using)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (if using)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Payment Gateway (if using)
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=false

# Plisio API (if using)
PLISIO_API_KEY=your-plisio-api-key
PLISIO_SHOP_ID=your-plisio-shop-id

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_ROUNDS=12
TOKEN_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Cache Configuration
CACHE_TTL_PRODUCTS=900
CACHE_TTL_PRODUCT_DETAIL=1800
CACHE_TTL_USER_SESSION=3600

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
